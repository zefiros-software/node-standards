{
  "extends": "@zefiros-software/node-standards/tsconfig.base.json",
  "include": [
    "src/**/*.ts",
    "src/**/.*.ts",
    "examples/**/*.ts",
    "examples/**/.*.ts",
    "static/**/*.ts",
    "static/**/.*.ts",
    "test/**/*.ts",
    "test/**/.*.ts",
    "typings/**/*.ts",
    "typings/**/.*.ts",
    "esbuild.config.ts",
    "*.js",
    ".*.js",
    "*.json",
    ".*.json"
  ],
  "compilerOptions": {
    "paths": {
      "*": ["./typings/*"],
      "~/*": ["./src/*"]
    },
    "outDir": "./dist",
    "baseUrl": ".",
    "rootDir": "."
  }
}
