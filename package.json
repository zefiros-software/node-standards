{
  "name": "@zefiros-software/node-standards",
  "description": "Build tools for Zefiros packages",
  "version": "1.0.0-beta.3",
  "license": "MIT",
  "main": ".main.js",
  "types": "index.d.ts",
  "bin": {
    "node-standards": "bin/run"
  },
  "engines": {
    "node": ">=14"
  },
  "node-standards": {
    "type": "yargs-cli",
    "template": {
      "exclude": [
        ".eslintrc.js",
        "babel.config.js",
        "commitlint.config.js",
        "lint-staged.config.js",
        "prettier.config.js",
        "release.config.js",
        "tsconfig.dist.json",
        "tsconfig.json",
        ".github/workflows/package.yml"
      ],
      "ignore": {
        "files": true
      }
    }
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/zefiros-software/node-standards.git"
  },
  "publishConfig": {
    "registry": "https://npm.pkg.github.com",
    "access": "restricted"
  },
  "files": [
    ".eslintrc.base.js",
    "babel.config.js",
    "bin",
    "commitlint.config.js",
    ".main.js",
    ".main.js.map",
    "index.d.ts",
    "src/**/*.d.ts",
    "jest.config.js",
    "lint-staged.config.js",
    "package.json",
    "prettier.config.js",
    "release.config.js",
    "templates",
    "tsconfig.base.json"
  ],
  "scripts": {
    "build": "npx ts-node esbuild.config.ts",
    "build:clean": "npx tsc --build --clean && rm .main.js && rm .main.js.map",
    "check:cost": "npx cost-of-modules --no-install --include-dev",
    "check:coverage": "npx jest --collectCoverage=true",
    "check:full": "npm run lint && npm run check:types && npm run check:coverage && npm run build && npm run check:project",
    "check:project": "npx node-standards lint",
    "check:types": "npx tsc -p tsconfig.json",
    "fix": "npm run lint -- --fix",
    "format": "npx prettier \"**/*.{ts,js,json,yml,yaml}\" --ignore-path .gitignore --write",
    "lint": "npx eslint \"{src,test,typing}/**/*.{ts,js}\" --no-eslintrc --cache -c .eslintrc.js --ignore-path .gitignore",
    "lint:full": "bash -c \"FULL_LINT=true npm run lint\"",
    "package": "rm -rf .dist && npm run build",
    "postyalcpublish": "cd examples/library && npx yalc add @zefiros-software/node-standards && cd ../yargs-cli && npx yalc add @zefiros-software/node-standards",
    "prepare": "npx husky install || true",
    "preyalcpublish": "npm run build",
    "test": "npx jest"
  },
  "dependencies": {
    "@babel/core": "^7.17.9",
    "@babel/preset-env": "^7.16.11",
    "@babel/preset-typescript": "^7.16.7",
    "@commitlint/cli": "^16.2.3",
    "@commitlint/config-conventional": "^16.2.1",
    "@semantic-release/changelog": "^6.0.1",
    "@types/jest": "^27.4.1",
    "@types/node": "^17.0.25",
    "@typescript-eslint/eslint-plugin": "^5.20.0",
    "@typescript-eslint/parser": "^5.20.0",
    "conventional-changelog": "^3.1.25",
    "esbuild": "^0.14.38",
    "eslint": "^8.13.0",
    "eslint-config-prettier": "^8.5.0",
    "eslint-import-resolver-typescript": "^2.7.1",
    "eslint-plugin-import": "^2.26.0",
    "eslint-plugin-prettier": "^4.0.0",
    "eslint-plugin-unused-imports": "^2.0.0",
    "husky": "^7.0.4",
    "is-ci": "^3.0.1",
    "jest": "^27.5.1",
    "lint-staged": "^12.3.8",
    "prettier": "^2.6.2",
    "semantic-release": "^19.0.2"
  },
  "peerDependencies": {
    "typescript": "^4.6.3"
  },
  "devDependencies": {
    "@types/adm-zip": "^0.5.0",
    "@types/concurrently": "^7.0.0",
    "@types/find-root": "^1.1.2",
    "@types/is-ci": "^3.0.0",
    "@types/source-map-support": "^0.5.4",
    "@types/yargs": "^17.0.10",
    "adm-zip": "^0.5.9",
    "find-root": "^1.1.0",
    "line-diff": "^2.1.1",
    "source-map-support": "^0.5.21",
    "ts-node": "^10.7.0",
    "tslib": "^2.3.1",
    "typescript": "^4.6.3",
    "variable-diff": "^2.0.2",
    "yargs": "^17.4.1"
  }
}