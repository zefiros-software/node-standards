{
  "name": "@zefiros-software/node-standards",
  "description": "Build tools for Zefiros packages",
  "version": "1.0.0",
  "license": "MIT",
  "main": "./dist/main.js",
  "types": "./dist/index.d.ts",
  "bin": {
    "node-standards": "bin/run"
  },
  "engines": {
    "node": ">=14"
  },
  "node-standards": {
    "type": "yargs-cli",
    "template": {
      "exclude": [
        ".eslintrc.js",
        "babel.config.js",
        "commitlint.config.js",
        "lefthook.yml",
        "lint-staged.config.js",
        "prettier.config.js",
        "release.config.js",
        "tsconfig.dist.json",
        "tsconfig.json",
        "webpack.config.js"
      ],
      "ignore": {
        "files": true
      }
    }
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/zefiros-software/node-standards.git"
  },
  "publishConfig": {
    "registry": "https://npm.pkg.github.com",
    "access": "restricted"
  },
  "files": [
    ".eslintrc.base.js",
    "babel.config.js",
    "bin",
    "commitlint.config.js",
    "dist",
    "jest.config.js",
    "lefthook.base.yml",
    "lint-staged.config.js",
    "package.json",
    "prettier.config.js",
    "release.config.js",
    "templates",
    "tsconfig.base.json",
    "wallaby.base.js",
    "webpack.library.js",
    "webpack.yargs.js"
  ],
  "scripts": {
    "build": "npx ts-node esbuild.config.ts",
    "check:cost": "npx cost-of-modules --no-install --include-dev",
    "check:coverage": "npx jest --collectCoverage=true",
    "check:full": "npm run lint && npm run check:types && npm run check:coverage && npm run build && npm run check:project",
    "check:project": "npx node-standards lint",
    "check:types": "npx tsc -p tsconfig.json",
    "fix": "npm run lint -- --fix",
    "format": "npx prettier \"**/*.{ts,js,json,yml,yaml}\" --ignore-path .gitignore --write",
    "lint": "npx eslint \"{src,test,typing}/**/*.{ts,js}\" --no-eslintrc --cache -c .eslintrc.js --ignore-path .gitignore",
    "lint:full": "bash -c \"FULL_LINT=true npm run lint\"",
    "package": "rm -rf dist && npm run build",
    "postinstall": "node bin/lefthook",
    "test": "npx jest"
  },
  "dependencies": {
    "@babel/core": "^7.16.0",
    "@babel/preset-env": "^7.16.4",
    "@babel/preset-typescript": "^7.16.0",
    "@commitlint/cli": "^15.0.0",
    "@commitlint/config-conventional": "^15.0.0",
    "@semantic-release/changelog": "^6.0.1",
    "@semantic-release/git": "^10.0.1",
    "@types/jest": "^27.0.3",
    "@types/node": "^16.11.10",
    "@typescript-eslint/eslint-plugin": "^5.4.0",
    "@typescript-eslint/parser": "^5.4.0",
    "conventional-changelog": "^3.1.24",
    "esbuild": "^0.14.2",
    "eslint": "^8.3.0",
    "eslint-config-prettier": "^8.3.0",
    "eslint-import-resolver-typescript": "^2.5.0",
    "eslint-plugin-import": "^2.25.3",
    "eslint-plugin-prettier": "^4.0.0",
    "eslint-plugin-unused-imports": "^2.0.0",
    "ignore-loader": "^0.1.2",
    "is-ci": "^3.0.1",
    "jest": "^27.3.1",
    "lint-staged": "^12.1.2",
    "prettier": "^2.4.1",
    "semantic-release": "^18.0.0",
    "semver": "^7.3.5",
    "ts-loader": "^9.2.6",
    "tsconfig-paths-webpack-plugin": "^3.5.2",
    "webpack": "^5.64.2",
    "webpack-cli": "^4.9.1",
    "webpack-node-externals": "^3.0.0"
  },
  "peerDependencies": {
    "typescript": "^4.5.2"
  },
  "devDependencies": {
    "@octokit/auth-action": "^1.3.3",
    "@octokit/rest": "^18.12.0",
    "@types/adm-zip": "^0.4.34",
    "@types/concurrently": "^6.4.0",
    "@types/find-root": "^1.1.2",
    "@types/is-ci": "^3.0.0",
    "@types/picomatch": "^2.3.0",
    "@types/semver": "^7.3.9",
    "@types/source-map-support": "^0.5.4",
    "@types/yargs": "^17.0.7",
    "adm-zip": "^0.5.9",
    "concurrently": "^6.4.0",
    "encoding": "^0.1.13",
    "find-root": "^1.1.0",
    "line-diff": "^2.1.1",
    "picomatch": "^2.3.0",
    "source-map-support": "^0.5.21",
    "ts-node": "^10.4.0",
    "tslib": "^2.3.1",
    "typescript": "^4.5.2",
    "variable-diff": "^2.0.2",
    "yargs": "^17.2.1"
  }
}
